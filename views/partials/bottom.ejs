<script type="application/javascript">

  var substringMatcher = function (strs) {
    return function findMatches(q, cb) {
      var matches, substringRegex;

      // an array that will be populated with substring matches
      matches = [];

      // regex used to determine if a string contains the substring `q`
      substrRegex = new RegExp(q, 'i');

      // iterate through the pool of strings and for any string that
      // contains the substring `q`, add it to the `matches` array
      $.each(strs, function (i, str) {
        if (substrRegex.test(str)) {
          matches.push(str);
        }
      });

      cb(matches);
    };
  };


  <% if(typeof subcat !== 'undefined') { %>
  var subcat = [];
  <% subcat.forEach(function(item){ %>
  subcat.push('<%= item %>')
  <% }); %>
  $('#subcat .subcat').typeahead({
      hint: true,
      highlight: true,
      minLength: 1
    },
    {
      name: 'subcategory',
      source: substringMatcher(subcat)
    });
  <% } %>

  <% if(typeof cat !== 'undefined') { %>
  var cat = [];
  <% cat.forEach(function(item){ %>
  cat.push('<%= item %>')
  <% }); %>
  $('#cat .cat').typeahead({
      hint: true,
      highlight: true,
      minLength: 1
    },
    {
      name: 'category',
      source: substringMatcher(cat)
    });
  <% } %>


  /**
   * Returns a random integer between min (inclusive) and max (inclusive)
   * Using Math.round() will give you a non-uniform distribution!
   */
  function getRandomInt(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  var color = [
    "rgb(176, 43, 44)",
    "rgb(209, 86, 0)",
    "rgb(199, 152, 16)",
    "rgb(115, 136, 10)",
    "rgb(107, 186, 112)",
    "rgb(63, 76, 107)",
    "rgb(53, 106, 160)",
    "rgb(208, 31, 60)",
    "rgb(255, 26, 0)",
    "rgb(204, 0, 0)",
    "rgb(255, 116, 0)",
    "rgb(0, 140, 0)",
    "rgb(0, 110, 46)",
    "rgb(64, 150, 238)",
    "rgb(255, 0, 132)",
    "rgb(54, 57, 61)",
  ];

  var dataes = [];
  var dataLabels = [];
  var setColors = [];
  <% if(typeof chart_filter !== 'undefined'){ %>
  <% chart_filter.forEach(function(item, index){ %>
  dataes.push(<%= item.sum %>)
  dataLabels.push('<%= item._id %>')
  setColors.push(color[getRandomInt(0, color.length)])
  <% }) %>
  <% } %>

  var config = {
    type: 'doughnut',
    data: {
      datasets: [{
        data: dataes,
        backgroundColor: setColors,
        label: 'Filter Categories'
      }],
      labels: dataLabels
    },
    options: {
      responsive: true,
      legend: {
        position: 'top',
      },
      title: {
        display: true,
        text: 'Filter Categories'
      },
      animation: {
        animateScale: true,
        animateRotate: true
      },
      onClick: function (one, two) {
        if (typeof two[0] !== 'undefined') {

          // Calling ajax value to show subcategories
          getSubCategories(dataLabels[two[0]._index])

          // remove columns
          //   config.data.datasets[0].data.splice(two[0]._index, two[0]._index)
          //   window.myDoughnut.update();
        }
      }
    }
  };


  function getSubCategories(cat) {
    $.ajax({
      method: "get",
      url: "/bank/getSubCatSum",
      data: {
        cat: cat,
        from_date: $("#from_date").val(),
        to_date: $("#to_date").val(),
      }
    })
      .done(function (msg) {

        var dataSet = [];
        var dataSetLabels = [];
        var dataColor = [];
        for (var x in msg) {

          dataSet.push(msg[x].sum)
          dataSetLabels.push(msg[x]._id)
          dataColor.push(color[getRandomInt(0, color.length)])

        }
        var configSecond = {
          data: {
            datasets: [{
              data: dataSet,
              backgroundColor: dataColor,
              label: 'Sub Categories' // for legend
            }],
            labels: dataSetLabels
          },
          options: {
            responsive: true,
            legend: {
              position: 'right',
            },
            title: {
              display: true,
              text: 'Sub Categories ' + cat
            },
            scale: {
              ticks: {
                beginAtZero: true
              },
              reverse: false
            },
            animation: {
              animateRotate: false,
              animateScale: true
            },
            onClick:function(one, two){

              if (typeof two[0] !== 'undefined') {

                // Calling ajax value to show subcategories
                getTitleSum(cat, dataSetLabels[two[0]._index]);
              }

            }
          }
        };

        // Remove the old object
        if(typeof window.myPolarArea != 'undefined'){
          window.myPolarArea.destroy();
        }

        // Create a new object
        var ctxs = document.getElementById('chart-area-subcat');
        window.myPolarArea = Chart.PolarArea(ctxs, configSecond);
      });

  }


  window.onload = function () {
    var ctx = document.getElementById('chart-area').getContext('2d');
    window.myDoughnut = new Chart(ctx, config);
  };


  /**
   * Getting title from sub category
   *
   * @author Muhammad Amir
   * @param  subcat
   */
  function getTitleSum(cat, subcat){

    $.ajax({
      method: "get",
      url: "/bank/getTitleSum",
      data: {
        cat: cat,
        subcat: subcat,
        from_date: $("#from_date").val(),
        to_date: $("#to_date").val(),
      }
    })
      .done(function (msg) {

        var dataSetTitle = [];
        var dataSetTitleLabels = [];
        var dataSetTitleColor = [];
        for (var x in msg) {

          dataSetTitle.push(msg[x].sum)
          dataSetTitleLabels.push(msg[x]._id)
          dataSetTitleColor.push(color[getRandomInt(0, color.length)])

        }
        var configThird = {
          data: {
            datasets: [{
              data: dataSetTitle,
              backgroundColor: dataSetTitleColor,
              label: 'Title' // for legend
            }],
            labels: dataSetTitleLabels
          },
          options: {
            responsive: true,
            legend: {
              position: 'right',
            },
            title: {
              display: true,
              text: 'Sub Category ' + subcat
            },
            scale: {
              ticks: {
                beginAtZero: true
              },
              reverse: false
            },
            animation: {
              animateRotate: false,
              animateScale: true
            },
            onClick:function(one, two){

              // if (typeof two[0] !== 'undefined') {
              //
              //   // Calling ajax value to show subcategories
              //   getTitleSum(dataSetTitleLabels[two[0]._index]);
              // }

            }
          }
        };

        // Remove the old object
        if(typeof window.mySubcat != 'undefined'){
          window.mySubcat.destroy();
        }

        // Create a new object
        var catTitle = document.getElementById('chart-area-title');
        window.mySubcat = Chart.PolarArea(catTitle, configThird);
      });

  }

</script>